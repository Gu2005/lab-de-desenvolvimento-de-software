package codigo.service;

import codigo.model.Pedido;
import codigorepository.PedidoRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
//Sugesto de melhoria
//Incluir um método para atualizar o status de um pedido, pois isso é comum em sistemas de gerenciamento de pedidos.

Service
public class PedidoService {

    Autowired
    private PedidoRepository pedidoRepository;

    public Pedido criarPedido(Pedido pedido) {
        pedido.setStatus("pendente");
        return pedidoRepository.save(pedido);
    }

    public List<Pedido> listarPedidosPorCliente(Long clienteId) {
        return pedidoRepository.findByClienteId(clienteId);
    }

    public Pedido buscarPorId(Long id) {
        return pedidoRepository.findById(id).orElse(null);
    }
}
