package Codigo.controller;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
 //Sugestao de melhoria: 
 //O  Controller deve ser responsável apenas pelo fluxo da requisição. Mova a lógica de acesso a dados para uma classe de serviço ou repositório.
// Criar uma classe ClienteDTO para apresentar os dados do cliente. 
// Fazer tratamento de erro com mensagens claras do que é o erro. 
//Adicionar lógica de login e cadastro do cliente

Controller
public class ClienteController {

    PostMapping("/clientes/salvar")
    public String salvarCliente(
            RequestParam("nome") String nome,
            RequestParam("rg") String rg,
            RequestParam("cpf") String cpf,
            RequestParam("endereco") String endereco) {

        String jdbcURL = "jdbc:mysql://localhost:5500/aluguel_carros";
        String username = "root";
        String password = ""; // Senha padrão do XAMPP

        try {
            // Estabelecer a conexão com o banco de dados
            Connection connection = DriverManager.getConnection(jdbcURL, username, password);

            // Criar a query SQL para inserir os dados no banco
            String sql = "INSERT INTO clientes (nome, rg, cpf, endereco) VALUES (?, ?, ?, ?)";
            PreparedStatement statement = connection.prepareStatement(sql);

            // Definir os valores recebidos no formulário
            statement.setString(1, nome);
            statement.setString(2, rg);
            statement.setString(3, cpf);
            statement.setString(4, endereco);

            // Executar a inserção no banco de dados
            statement.executeUpdate();

            // Fechar a conexão
            connection.close();
            
        } catch (Exception e) {
            e.printStackTrace();
        }

        // Redirecionar para a página inicial após o cadastro
        return "redirect:/";
    }
}
